javascript:(function(){var img='https://randomuser.me/api/portraits/men/1.jpg';document.querySelectorAll('*').forEach(function(node){if(node.nodeType===3){var replacedHTML=node.textContent.replace(/[^a-zA-Z0-9]/g,'<img src="'+img+'" style="width:20px;height:20px;">');var span=document.createElement('span');span.innerHTML=replacedHTML;node.parentNode.replaceChild(span,node);}});document.querySelectorAll('img').forEach(function(node){node.src=img;node.srcset=img;});document.body.style.backgroundImage='url('+img+')';document.body.style.backgroundSize='cover';document.querySelectorAll('*').forEach(function(node){node.style.borderImageSource='url('+img+')';node.style.backgroundImage='url('+img+')';});})();
